@{
    ViewData["Title"] = "Objectify - Objecting Unethical Practices";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="styles.css"> <!-- Include your custom CSS file -->
    <style>
        /* Custom styles */
        body {
            background-color: #f0f0f0;
        }
        .jumbotron {
            background-color: #343a40;
            color: #ffffff;
        }
        .lead {
            color: #ffffff;
        }
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }
        .btn-primary:hover {
            background-color: #0069d9;
            border-color: #0062cc;
        }
        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }
        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }
        footer {
            background-color: #343a40;
            color: #ffffff;
            padding: 20px 0;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Objectify</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("About", "Home")">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/signup-form/login_converted.cshtml">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/signup-form/signup_converted.cshtml">Sign Up</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">Contact Us</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <main role="main">
        <section class="jumbotron text-center">
            <div class="container">
                <h1 class="jumbotron-heading">Objectify</h1>
                <p class="lead text-muted">A platform to publicly express objection to unethical practices.</p>
                <p>
                    <a href="#" class="btn btn-primary my-2">Learn More</a>
                    <a href="#" class="btn btn-secondary my-2">Get Involved</a>
                </p>
            </div>
        </section>

        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h2>Tax Avoidance</h2>
                    <p>Learn about how tax avoidance impacts communities and economies.</p>
                </div>
                <div class="col-md-4">
                    <h2>Unfair Employment Practices</h2>
                    <p>Highlighting unfair labor practices and their consequences.</p>
                </div>
                <div class="col-md-4">
                    <h2>Racism</h2>
                    <p>Raising awareness about racism and its effects on society.</p>
                </div>
            </div>
        </div>
    </main>

    <footer class="text-muted text-center">
        <div class="container">
            <p>&copy; @DateTime.Now.Year Objectify. All rights reserved.</p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
